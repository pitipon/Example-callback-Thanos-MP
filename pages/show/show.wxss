/* pages/show/show.wxss */

.banner {
    color: white;
    text-align: center;
    height: 50vh;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .title {
    font-size: 60px;
    font-weight: 100;
    text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
  }

  .teaser {
      font-size: 16px;
      font-weight: 400;
      text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
      color: rgb(44, 44, 44);
      text-align: left;
      /* padding-left: 10px; */
      margin: 10px;
  }

  .tag {
      border: 0.1px solid black;
      border-radius: 2px;
      padding: 5px;
  }

  .avatar {
      border-radius: 100%;
      width: 20px;
      height: 20px;
      margin-left: 10px;
      margin-right: 10px;
  }

  .bold {
      font-weight: 700;
  }

